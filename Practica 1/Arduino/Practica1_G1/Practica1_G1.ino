void encenderLed(int x, int y) {
	digitalWrite(y, LOW);
	digitalWrite(14 + x, HIGH);
	delayMicroseconds(1000);
	digitalWrite(y, HIGH);
	digitalWrite(14 + x, LOW);
}

void pintarLed(int x, int y) {
	if (x >= 0 && x <= 7)
		encenderLed(x, y); // manipulo matriz sin driver
	else if (x >= 8 && x <= 15)
		matriz.setLed(0, y, x - 8, true); //  " " con driver
}

void borrarLed(int x, int y) {
	if (x >= 8 && x <= 15)
		matriz.setLed(0, y, x - 8, false); //  " " con driver
}

